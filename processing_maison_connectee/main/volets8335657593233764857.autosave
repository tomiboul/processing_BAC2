  }
  
  void ouverture_automatique(){
    if (hours <= 7 && hours >= 0){
      ouvert = false;
    }
    if (hours >= 7 && hours <= 23){
      if (!ouvert){
        ouvert = true;
      }
    }
  }
  
  void display(){
