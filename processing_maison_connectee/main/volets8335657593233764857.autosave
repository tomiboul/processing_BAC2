  Volets(float x, float y, float h){
    this.x=x;
    this.y=y;
    ouvert = false;
    this.h = h;
  }

   void ouvreFerme(boolean prochainEtat){
    ouvert = prochainEtat;
  }

  boolean getOuvert(){
